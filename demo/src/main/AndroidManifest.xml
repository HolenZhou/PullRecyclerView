<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.holenzhou.demo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.holenzhou.demo.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".CommonListActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".EmptyListActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".GridListActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".FooterListActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>